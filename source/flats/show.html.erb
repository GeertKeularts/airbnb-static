<% flat = data.flats[owner]  %>

<body>
  <div class="banner-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path flat[:picture]  %>');">
  </div>

  <div class="header-flat">
    <div class="container">
      <div class="row">
        <div class="profile">
        <div class="col-xs-12">
            <div class="profile-user">
              <div class="col-xs-6">
                <%= image_tag flat[:owner_picture], class:"avatar-xl"  %>
                <p><%= owner.capitalize %></p>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="profile-info">
                <p><%= flat[:summary]  %></p>
                <p><%= flat[:city]  %></p>
                <ul class= "list-inline">
                  <li>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>